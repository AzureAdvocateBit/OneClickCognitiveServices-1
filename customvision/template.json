{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cvName": {
            "defaultValue": "cv",
            "type": "String",
            "metadata": {
                "description": "Custom Vision Name Base Name"
            }
        },
        "cvPredictionName": {
            "defaultValue": "cvp",
            "type": "String",
            "metadata": {
                "description": "Custom Vision Prediction Name Base Name"
            }
        },
        "location": {
            "defaultValue": "eastus",
            "allowedValues": ["eastus", "westus"],
            "type": "string",
            "metadata": {
                "description": "Locations"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[concat(parameters('cvName'), uniqueString(resourceGroup().id))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "F0"
            },
            "kind": "CustomVision.Training",
            "properties": {
                "customSubDomainName": "[concat(parameters('cvName'), uniqueString(resourceGroup().id))]"
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[concat(parameters('cvPredictionName'), uniqueString(resourceGroup().id))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "F0"
            },
            "kind": "CustomVision.Prediction",
            "properties": {
                "customSubDomainName": "[concat(parameters('cvPredictionName'), uniqueString(resourceGroup().id))]"
            }
        }
    ]
}